body
	letter-spacing: -0.01em;
	text-shadow: 0px 1px 1px rgba(0, 0, 0, 0.1);
	font-size: 18.33px;

form
	margin: 0;

article
	display: block;
	padding: 0.5ex;
	padding-top: 0.8ex; padding-bottom: 0.8ex;
	border-bottom: 1px solid #f5f5f5;
	background-color: white;
	overflow: hidden;
	line-height: 0.9em;

article.delete
	animation: growHeight 150ms ease-in-out reverse;

article.new-entry
	max-height: 0;
	opacity: 0;
	animation: growHeight 200ms ease-in-out forwards;

@keyframes growHeight
	from
		max-height: 0;
		opacity: 0;
		//transform: scale(0);
	to
		max-height: 4em;
		max-height: -moz-max-content;
		opacity: 1;
		//transform: scale(1);

article:last-child
	border-bottom: none;

time
	font-style: italic;
	color: silver;
	text-shadow: none;

.author
	font-weight: 600;

footer
	border-top: 1px solid rgb(229, 229, 229);
	background-color: rgb(245, 245, 245);
	padding: 1ex;
	margin-top: 1em;
	text-align: center;

.navbar
	margin-bottom: 0;

#chat-log.container-fluid
	padding: 0;
	padding-left: 0.5ex; padding-right: 0.5ex;

#chat-entry
	position: fixed;
	bottom: 0;
	left: 0; right: 0;
	background-color: #eee;
	border-top: 1px solid #ccc;
	padding: 0.2ex;
